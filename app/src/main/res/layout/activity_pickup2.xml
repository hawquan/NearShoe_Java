<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pickup2">
<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <TextView
        android:id="@+id/textView9"
        android:layout_width="106dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="120dp"
        android:text="Sneaker Amount:"
        android:textColor="#0C0A0A"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/spinner2"
        app:layout_constraintEnd_toStartOf="@+id/spinner2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Delivery Date And Time"
        android:textColor="#090606"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/txtSelectTime" />

    <Button
        android:id="@+id/btSelectDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Select Date"
        app:layout_constraintEnd_toEndOf="@+id/spinner2"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/txtSelectDate"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/pickupLocation"
        android:layout_width="218dp"
        android:layout_height="51dp"
        android:ems="10"
        android:hint="Pickup Address"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/btPickLocation"
        app:layout_constraintStart_toStartOf="@+id/textView12"
        app:layout_constraintTop_toTopOf="@+id/btPickLocation" />

    <EditText
        android:id="@+id/txtDeliveryDate"
        android:layout_width="140dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="Date"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/btDeliveryDate"
        app:layout_constraintStart_toStartOf="@+id/textView12"
        app:layout_constraintTop_toTopOf="@+id/btDeliveryDate"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btCompletePickup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Complete the pickup order"
        android:background="@drawable/red_round_border"
        app:layout_constraintEnd_toEndOf="@+id/totalFee"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/txtSelectDate"
        android:layout_width="140dp"
        android:layout_height="42dp"
        android:layout_marginStart="4dp"
        android:hint="Date"
        android:textColor="#0C0A0A"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/btSelectDate"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/btSelectDate"
        app:layout_constraintVertical_bias="0.166" />

    <Button
        android:id="@+id/btDeliveryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Select Date"
        app:layout_constraintStart_toEndOf="@+id/txtDeliveryDate"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Pickup Date And Time"
        android:textColor="#070505"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <Button
        android:id="@+id/btDeliveryTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="Select Time"
        app:layout_constraintEnd_toEndOf="@+id/btDeliveryDate"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/txtDeliveryTime"
        app:layout_constraintTop_toBottomOf="@+id/btDeliveryDate" />

    <ImageButton
        android:id="@+id/btPickLocation"
        android:layout_width="48dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:src="@android:drawable/ic_menu_mylocation"
        app:layout_constraintEnd_toEndOf="@+id/btDeliveryTime"
        app:layout_constraintTop_toBottomOf="@+id/btDeliveryTime" />

    <Button
        android:id="@+id/btSelectTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="Select Time"
        app:layout_constraintEnd_toEndOf="@+id/btSelectDate"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/txtSelectTime"
        app:layout_constraintTop_toBottomOf="@+id/btSelectDate" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="106dp"
        android:layout_height="50dp"
        android:text="Total Fee(RM) :"
        android:textColor="#0C0A0A"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="@+id/totalFee"
        app:layout_constraintStart_toStartOf="@+id/deliveryLocation"
        app:layout_constraintTop_toTopOf="@+id/totalFee"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/txtDeliveryTime"
        android:layout_width="140dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="Time"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/btDeliveryTime"
        app:layout_constraintStart_toStartOf="@+id/txtDeliveryDate"
        app:layout_constraintTop_toTopOf="@+id/btDeliveryTime"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/totalFee"
        android:layout_width="159dp"
        android:layout_height="47dp"
        android:ems="10"
        android:hint="RMXX.XX"
        android:inputType="textPersonName"
        android:textColor="#0B0505"
        app:layout_constraintEnd_toEndOf="@+id/btDeliveryLocation"
        app:layout_constraintTop_toBottomOf="@+id/btDeliveryLocation" />

    <EditText
        android:id="@+id/txtSelectTime"
        android:layout_width="140dp"
        android:layout_height="42dp"
        android:hint="Time"
        android:textColor="#090707"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/btSelectTime"
        app:layout_constraintStart_toStartOf="@+id/txtSelectDate"
        app:layout_constraintTop_toTopOf="@+id/btSelectTime"
        app:layout_constraintVertical_bias="1.0" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="143dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.776"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.176" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Pickup And Delivery"
        android:textColor="#0C0909"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btCompletePickup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005" />

    <TextView
        android:id="@+id/warning"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="*Do not leave without complete. Your order will be cancel without address."
        android:textColor="@color/red"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/deliveryLocation"
        android:layout_width="218dp"
        android:layout_height="51dp"
        android:ems="10"
        android:hint="Delivery Address"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/btDeliveryLocation"
        app:layout_constraintStart_toStartOf="@+id/pickupLocation"
        app:layout_constraintTop_toTopOf="@+id/btDeliveryLocation" />

    <ImageButton
        android:id="@+id/btDeliveryLocation"
        android:layout_width="48dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/btPickLocation"
        app:layout_constraintTop_toBottomOf="@+id/btPickLocation"
        app:srcCompat="@android:drawable/ic_menu_mylocation" />

</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>